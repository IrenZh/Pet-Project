{
  "name": "pet-project",
  "version": "1.0.0",
  "description": "Pet project of online shop",
  "main": "index.js",
  "scripts": {
    "cy:open": "cypress open",
    "cy:run": "cypress run --env allure=true --reporter mocha-allure-reporter",
    "lint": "eslint ./cypress --ext .js --ext .jsx",
    "allure:report": "allure generate allure-results --clean -o allure-report",
    "allure:run": "cypress run --env allure=true,allureResultsPath=cypress/allure-results",
    "generate-allure-report": "npm run allure:run && npm run allure:report"
  },
  "author": "Ira Zhurakivska",
  "license": "ISC",
  "devDependencies": {
    "@shelex/cypress-allure-plugin": "^2.40.0",
    "allure-commandline": "^2.23.1",
    "eslint": "^8.46.0",
    "eslint-plugin-cypress": "^2.13.3",
    "mocha-allure-reporter": "^1.4.0"
  },
  "dependencies": {
    "cypress": "^12.17.2",
    "mocha": "^10.0.0"
  }
}
